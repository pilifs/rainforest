<%= link_to "Back to Products", products_path %>

<h1>New Product</h1>

<%= form_for @product do |f| %>

  <p>
    <%= f.label :name%>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :price_in_cents %>
    <%= f.number_field :price_in_cents %>
  </p>

  <%= f.submit %>

<% end %>
