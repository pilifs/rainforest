<h1>Products (<%= @products.count %>)</h1>

<h3>Search by title</h3>
<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<div id="products">
  <%= render @products %>
</div>

<%= link_to "New", new_product_url %>
